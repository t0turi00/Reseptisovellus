        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="Kuullota sipuli, leikkaa viikset"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
